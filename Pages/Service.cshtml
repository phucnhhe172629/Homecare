<script>
        // JavaScript to toggle checkbox visibility based on selected radio button
    document.addEventListener('DOMContentLoaded', function() {
        // Get all radio buttons
        const radioButtons = document.querySelectorAll('input[name="nxcleanly[cleaning_like]"]');
        const daysContainer = document.querySelector('.days-items-container');

        // Function to toggle visibility based on selected radio
        function toggleDaysContainer() {
            const selectedValue = document.querySelector('input[name="nxcleanly[cleaning_like]"]:checked').value;
            // Show container if selected value is Weekly, Every 2 Weeks, or Monthly
            if (selectedValue === 'weekly' || selectedValue === 'every-2-weeks' || selectedValue === 'monthly') {
                daysContainer.style.display = 'block';
            } else {
                daysContainer.style.display = 'none';
            }
        }

        // Add change event listener to each radio button
        radioButtons.forEach(radio => {
            radio.addEventListener('change', toggleDaysContainer);
        });

        // Initial check to set the correct display on page load
        toggleDaysContainer();
    });

    document.querySelectorAll('.topics input[type="checkbox"]').forEach((checkbox) => {
        checkbox.addEventListener('change', function () {
            if (this.checked) {
                this.closest('.extra').style.backgroundColor = '#6a0dad';
                this.closest('.extra').style.color = '#ffffff';
                this.closest('.extra').style.borderColor = '#6a0dad';
            } else {
                this.closest('.extra').style.backgroundColor = ''; // Reset to default
                this.closest('.extra').style.color = '';
                this.closest('.extra').style.borderColor = '';
            }
        });
    });

</script>